<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs213.photoAlbum.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cs213.photoAlbum.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.EditAlbum"
            android:label="@string/title_activity_edit_album" >
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.CreateAlbum"
            android:label="@string/title_activity_create_album" >
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.PhotoListActivity"
            android:label="@string/title_photo_list" >
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.PhotoDetailActivity"
            android:label="@string/title_photo_detail"
            android:parentActivityName="cs213.photoAlbum.android.PhotoListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs213.photoAlbum.android.PhotoListActivity" />
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.SearchPhotos"
            android:label="@string/title_activity_search_photos" >
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.AddPhoto"
            android:label="@string/title_activity_add_photo" >
        </activity>
        <activity
            android:name="cs213.photoAlbum.android.ViewPhotos"
            android:label="@string/title_activity_view_photos" >
        </activity>
    </application>

</manifest>
